{
  "manifest_version": 2,

  "name": "Focus45",
  "description": "Focus for 45 minutes",
  "version": "1.0",
  "icons": {
    "16": "image/icon16.png",
    "48": "image/icon48.png",
    "128": "image/icon128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "image/icon19.png",
      "38": "image/icon38.png"
    },
    "default_popup": "html/popup.html"
  },

  "background": {
    "scripts" :["js/background.js"],
    "persistent": false
  },

  "web_accessible_resources": [
    "images/congrats48.png"
  ],

  "permissions": [
    "webNavigation",
    "tabs",
    "storage",
    "activeTab",
    "notifications",
    "<all_urls>"
  ]
}